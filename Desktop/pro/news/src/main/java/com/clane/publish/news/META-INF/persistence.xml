<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

  <persistence-unit name="templatePersistenceUnit">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.clane.publish.news.model.entity.Author</class>
    <class>com.clane.publish.news.model.entity.News</class>
    <class>com.clane.publish.news.model.entity.Permission</class>
    <class>com.clane.publish.news.model.entity.Role</class>
    <class>com.clane.publish.news.model.entity.RolePermission</class>
    <class>com.clane.publish.news.model.entity.Token</class>

    <properties>
      <property name="hibernate.connection.url"
        value="jdbc:sqlserver://localhost;databaseName=appraisal"/>
      <property name="hibernate.connection.driver_class"
        value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="hibernate.connection.username" value="sa"/>
      <property name="hibernate.connection.password" value="Password$"/>
      <property name="hibernate.archive.autodetection" value="class"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hbm2ddl.auto" value="update"/>
      <property name="openjpa.ConnectionURL"
        value="jdbc:sqlserver://localhost;databaseName=appraisal"/>
      <property name="openjpa.ConnectionDriverName"
        value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="eclipselink.jdbc.url"
        value="jdbc:sqlserver://localhost;databaseName=appraisal"/>
      <property name="eclipselink.jdbc.driver"
        value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
    </properties>
  </persistence-unit>
</persistence>